@using MVCKutuphanesi.Models.Entity
@model List<TBLADMIN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Eklediğim stil ve script dosyaları -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<!-- FontAwesome stil dosyası -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<br />
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>KULLANICI</td>
        <td>YETKİ</td>
        <td>DÜZENLE</td>
        <td>SİL</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KULLANICIADI</td>
            <td>@x.YETKI</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@x.ID">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@x.ID">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>

<!-- Butonun modalı açacak şekilde düzenlenmiş hali -->
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1"> Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Admin Ekle</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <!-- Modal içeriği buraya eklenecek -->
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="KULLANICIADI" class="form-control" />
                    <label>Şifre</label>
                    <input type="text" name="SIFRE" class="form-control" />
                    <label>Yetki</label>
                    <input type="text" name="YETKI" class="form-control" />
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </div>
            </form>
            
            
        </div>
    </div>
</div>
