@model MVCKutuphanesi.Models.Entity.TBLDUYURULAR 
@{
    ViewBag.Title = "YeniDuyuru";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <br />
    <div>
        <label>Duyuru Kategorisi</label>
        @Html.TextBoxFor(x => x.KATEGORI, new { @class = "form-control" })
    </div>
    <div>
        <label>Duyuru İçeriği</label>
        @Html.TextBoxFor(x => x.ICERIK, new { @class = "form-control" })
    </div>
    <div>
        <label>Duyuru Tarihi</label>
        @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Duyuru Ekle</button>

    </div>

</form>

