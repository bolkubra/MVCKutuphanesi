@model MVCKutuphanesi.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("YazarGüncelle", "Yazar", FormMethod.Post))
{
    <br />
    <div class="form-group">
        @Html.LabelFor(y => y.ID)
        @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })

        @Html.LabelFor(y => y.AD)
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })

        @Html.LabelFor(y => y.SOYAD)
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })

        @Html.LabelFor(y => y.DETAY)
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

