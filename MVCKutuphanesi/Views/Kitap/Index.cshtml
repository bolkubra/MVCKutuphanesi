@using MVCKutuphanesi.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h3>Kitap Sayfası</h3>
<div style="margin-bottom:15px; margin-top:15px;">
    <input   type="text" class="form-control" placeholder="Kitan adı giriniz..."/>
</div>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model) { 
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD&nbsp; @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYILI</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger" style="font-size:10px"> SİL</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success" style="font-size:10px"> GÜNCELLE</a></td>

        </tr>
    }
</table>

<a href="/Kitap/KitapEkle/" class="btn btn-primary"> Yeni Kitap Ekle </a>

